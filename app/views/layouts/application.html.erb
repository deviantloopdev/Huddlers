<style>
	#navlist li
	{
		display: inline;
		display: table-cell;
		height: 30px;
		list-style-type: none;
		vertical-align: middle;
		padding-top: 0px;
		padding-right: 5px;
	}
	
	#q
	{
		width: 400px;
		border-radius: 10px;
		outline: none;
		padding-left: 8px;
	}
	
	.submit_tag
	{
		height: 20px;
		width: 20px;
		vertical-align: middle;
	}
</style>

<!DOCTYPE html>
<html>
<head>
  <title>Huddlers</title>
  <%= stylesheet_link_tag    "application.css" %>
  <%= javascript_include_tag "application.js" %>
  <%= stylesheet_link_tag "layout.css" %>
  <%= javascript_include_tag "layout.js" %>
  <%= csrf_meta_tags %> 
</head>

<body>
	<% if user_signed_in? %>
	<div id="container" style="height:50px; background-image: linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -o-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -moz-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -webkit-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -ms-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -webkit-gradient(
									linear,
									left bottom,
									left top,
									color-stop(0.01, #002100),
									color-stop(0.51, #003400));" >
		<div id="greenBar">
				<div id="loggedInMenubar" style="width:1088px; min-width:980px; margin:0 auto;">
					<div id="logoContainer" style="width:187px; padding-left: 30px; padding-top:12px; z-index:5; float:left;">
						<img src="/assets/Huddlers_Logo.png" style="height:25px;"/>
					</div>
					<div id="headNav" style="padding-left: 277px; z-index:4;">
						<div id="searchForm" class="search" style="float:left; padding-top:12px;">
							<%= form_tag("/search", :method => "get") do %>
							<%= label_tag(:q, "") %>
							<%= text_field_tag(:q) %>
							<%= image_submit_tag("/assets/btn_search.png", :class => "submit_tag") %>
							<% end %>
						</div>
						<div id="userNavContainer" style="float:right; color: #9DC975; font-size:12px; z-index:4;">
							<ul id="navlist" style="display: table;">
								<a href="#" style="text-decoration: none;"><li id="active"><img src="/assets/profile.png" height="30" width="30" /></li>
								<li style="color:#9DC975;"><%= current_user.first_name %> <%= current_user.last_name %></li></a>
								<li><a href="#"><img src="/assets/btn_dropdown.png" height="15" width="15"/ ></a></li>
							</ul>
						</div>
					</div>					
				</div>
		</div>
	</div>
	
	<div>
		<div id="loggedOutContent">
			<div id="footerContainer">
				<div id="footer">
					<p><font style="color:#000; font-size:12px;">&copy; Huddlers 2011. <b>Powered by Sponsorship</b></font></p>
				</div>
			</div>
		</div>
	</div>
<!--<%= yield %>-->
<!--	<div style="display:none;" id="user_nav">
	  <% if user_signed_in? %>
	    Signed in as <%= current_user.email %>. Not you?
	    <%= link_to "Sign Out", destroy_user_session_path %>
	  <% end %>
	</div>-->
	<%= yield %>
<% else %>
	<%= yield %>
<% end %>
	

</body>

</html>

<style>
	.logIn_label
	{
		padding-left:10px;
	}
	
	.form_field
	{
		height: 30px;
		width: 221px;
		border-radius: 5px;
		outline: none;
		padding-left: 8px;	
		margin-bottom: 10px;
	}
	
	.form_label
	{
		text-align: right;
		color:#002100;
	}
	
	#footerNav li
	{
		display: inline;
		display: table-cell;
		list-style-type: none;
		vertical-align: middle;
		height:32px;
		padding-right: 55px;
		padding-top: 10px;
	}
	
	#pageBackground
	{
		position: absolute;
		z-index: -100;
		width: 100%;
		margin-top: 50px;
	}
	
	.signUpButton
	{
		background-image: url("/assets/signup.png");
		width: 221px;
		height: 62px;
		border-style: none;
	}
	
	.signUpButton:hover
	{
		background-image: url("/assets/signup_h.png");
		cursor: pointer;
	}
	
	.signUpButton:active
	{
		background-image: url("/assets/signup_a.png");
		cursor: pointer;
	}
	
	.logInButton
	{
		background-image: url("/assets/login.png");
		width: 60px;
		height: 32px;
		border-style: none;
		border-radius: 6px;
		vertical-align: top;
		margin-left: 10px;
	}
	
	.logInButton:hover
	{
		background-image: url("/assets/login_h.png");
		cursor: pointer;
	}
	
	.logInButton:active
	{
		background-image: url("/assets/login_a.png");
		cursor: pointer;
	}
	
</style>

<script>
	var tggle='off'
	
	function SignUpHover(){ 
		if (tggle=='on'){ 
			document.dropdownSymbol1.src="/assets/signup2.png" 
			tggle='off'
		} else { 
			document.dropdownSymbol1.src="/assets/signup2_h.png" 
			tggle='on'
		} 
	}
	
	function SignUpClick(){
		if (tggle=='off'){ 
			document.dropdownSymbol1.src="/assets/signup2_h.png" 
			tggle='on'
		} else { 
			document.dropdownSymbol1.src="/assets/signup2_a.png" 
			tggle='off'
		}
	}
	
	function TwitterHover(){ 
		if (tggle=='on'){ 
			document.dropdownSymbol2.src="/assets/twitter.png" 
			tggle='off'
		} else { 
			document.dropdownSymbol2.src="/assets/twitter_h.png" 
			tggle='on'
		} 
	}
	
	function TwitterClick(){
		if (tggle=='off'){ 
			document.dropdownSymbol2.src="/assets/twitter_h.png" 
			tggle='on'
		} else { 
			document.dropdownSymbol2.src="/assets/twitter_a.png" 
			tggle='off'
		}
	}
</script> 

<div id="pageBackground"><img src="/assets/bg1.png" width="100%" height="400"></div>
<div id="contentContainer" style="height:430px;">
	<div id="container" style="height:80px; background-image: linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -o-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -moz-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -webkit-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -ms-linear-gradient(bottom, #002100 1%, #003400 51%);
								background-image: -webkit-gradient(
									linear,
									left bottom,
									left top,
									color-stop(0.01, #002100),
									color-stop(0.51, #003400));" >
		<div id="greenBar">
				<div id="loggedInMenubar" style="width:1088px; min-width:980px; margin:0 auto;">
					<div id="logoContainer" style="width:187px; padding-left: 30px; padding-top:42px; z-index:5; float:left;">
						<img src="/assets/Huddlers_Logo.png" style="height:25px;"/>
					</div>
					<div id="headNav" style="float:right; z-index:4;">
						<div id="loginForm" class="search" style="float:left; padding-top:40px; color:#9DC975; vertical-align:top; font-size:13px;">
							<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  						<div><%= f.label :email, :class => "logIn_label" %>: <%= f.email_field :email, :class => "form_field" %>
	  						<%= f.label :password, :class => "logIn_label" %>: <%= f.password_field :password, :class => "form_field" %>
	  						<%= f.submit "", :class => "logInButton" %></div>
	  						<% end %>
						</div>
					</div>					
				</div>
		</div>
		<div id="signUpPage" style="width:1088px; min-width:980px; margin:0 auto;">
			<div id="signUpForm" style="padding-right:298px; float:right;">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
				  <%= devise_error_messages! %>
				  <table style="font-size:13px;">
				  	  <tr>
					  <td><%= f.label :email, :class => "form_label" %>: </td>
					  <td><%= f.email_field :email, :class => "form_field" %></td>
					  </tr>
					  <tr>
					  <td><%= f.label :first_name, "First Name", :class => "form_label" %>: </td>
					  <td><%= f.text_field :first_name, :class => "form_field" %></td>
					  </tr>
					  <tr>
					  <td><%= f.label :last_name, "Last Name", :class => "form_label" %>: </td>
					  <td><%= f.text_field :last_name, :class => "form_field" %></td>
					  </tr>
					  <tr>
					  <td><%= f.label :password, :class => "form_label" %>: </td>
					  <td><%= f.password_field :password, :class => "form_field" %></td>
					  </tr>
					  <tr>
					  <td><%= f.label :password_confirmation, "Confirm Password", :class => "form_label" %>: </td>
					  <td><%= f.password_field :password_confirmation, :class => "form_field" %></td>
					  </tr>
					  <tr>
					  <td></td>
					  <td><%= f.submit "", :class=>"signUpButton" %></td>
					  </tr>
					  <tr>
					  <td></td>
					  <td><%= render :partial => "devise/shared/links" %></td>
					  </tr>
				  </table>
				<% end %>
			</div>
		</div>
	</div>
</div>	
